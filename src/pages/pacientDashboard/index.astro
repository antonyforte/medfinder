          <script>
            console.log("Script carregado no final da página");

            window.addEventListener("load", () => {
              console.log("Window carregada completamente");

              const userId = localStorage.getItem("usuario_id");
              console.log("ID do usuário:", userId);

              if (!userId) {
                console.warn("Usuário não logado, redirecionando...");
                window.location.href = "/login";
                return;
              }

              console.log("Iniciando fetch dos usuários...");
              fetch("https://medfinder-fastapi.azurewebsites.net/usuarios")
                .then((res) => {
                  console.log("Resposta recebida:", res);
                  return res.json();
                })
                .then((pacientes) => {
                  console.log("Lista de pacientes recebida:", pacientes);
                  const paciente = pacientes.find((p: any) => p[0] == userId); // p[0] é o ID do usuário
                  if (!paciente) {
                    console.warn("Paciente não encontrado");
                    return;
                  }
                  const userAvatar = document.querySelector(".user-avatar") as HTMLElement;
                  if (userAvatar) {
                    userAvatar.innerText = paciente.nome
                        .split(" ")
                        .map((n: string) => n[0])
                        .join("")
                        .substring(0, 2);
                  }
                  const welcomeSection = document.querySelector(".welcome-section h2") as HTMLElement;
                  if (welcomeSection) {
                    welcomeSection.innerText = `Bem-vindo, ${paciente.nome}`;
                  }
                })
                .catch((err) => {
                  console.error("Erro ao buscar pacientes:", err);
                });

              console.log("Iniciando fetch dos médicos...");
              fetch("https://medfinder-fastapi.azurewebsites.net/medicos")
