                        localStorage.setItem("clinica_id", medico[0]);
                        location.href = `/pacientDashboard/medic/${medico[0]}`;
                      };

                      container.appendChild(card);
                    });
                  }
                  //lucide.replace();
                })
                .catch((err) => {
                  console.error("Erro ao buscar médicos:", err);
                });
            });
